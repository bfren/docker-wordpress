#!/usr/bin/with-contenv bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Delete contents first.
#======================================================================================================================

[[ "$(ls -A ${WP_CONTENT})" ]] && bf-rmrf "${WP_CONTENT}/*"


#======================================================================================================================
# Copy default wp-content.
#======================================================================================================================

bf-echo "Copying default wp-content to ${WP_CONTENT}..."
cp -R ${WP_CONTENT_DEFAULT}/* ${WP_CONTENT}/
bf-done


#======================================================================================================================
# Set correct permissions.
#======================================================================================================================

wp-content-setperms
